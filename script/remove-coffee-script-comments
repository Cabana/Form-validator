#!/usr/bin/env ruby

def main
  paths = Dir.glob("spec/**/*.js") + Dir.glob("lib/**/*.js")

  paths.each do |path|
    new_content = File.read(path).lines.inject("") do |acc, line|
      if line.match(/Generated by CoffeeScript 1\.7\.1/)
        acc
      else
        acc += line
      end
    end

    File.write(path, new_content)
  end
end

main
